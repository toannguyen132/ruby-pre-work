<div class="container">
  <h1>Tags: <%= @tag.name %></h1>
  <div class="row">
    <div class="col-md-8">
      <div class="article-list">
        <% @tag.articles.each do |article| %>
          <div class="card mb-4">
            <div class="card-block">
              <h4 class="card-title"><%= link_to(article.title, article_path(article)) %></h4>
              <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
            </div>
            <div class="card-footer">
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
              <%= link_to 'Delete', article, class: 'btn btn-danger mr-3', method: :delete, data: { confirm: 'Are you sure you want to delete?'} %>
              <%= article.views_count ? article.views_count : '0' %> view(s)
            </div>
          </div>
        <% end %>
      </div>  
    </div>
  </div>

</div>