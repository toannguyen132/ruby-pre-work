
<div class="row">
  <div class="col-md-6">
    <%= form_for [@article, @article.comments.build] do |f| %>
      <div class="form-group">
        <%= f.label :author %><br>
        <%= f.text_field :author, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content %><br>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>